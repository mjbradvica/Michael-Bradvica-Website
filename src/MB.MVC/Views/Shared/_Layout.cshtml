    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="footer">
    <div class="content has-text-centered">
        <p>MichaelBradvica.com - &copy; @DateTime.UtcNow.Year - Built with ASP.NET Core MVC, hosted on AWS.</p>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", false)
</body>
</html>